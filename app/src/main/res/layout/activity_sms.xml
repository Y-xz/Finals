<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    >
    <View
        android:id="@+id/sms_view"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/et_smsphonenumber"
        android:paddingTop="20dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sms_view"
        android:layout_alignLeft="@id/sms_view"
        android:background="@null"
        android:hint="输入手机号码"
        android:inputType="phone"
        android:textColorHint="@color/text_button"/>
    <Button
        android:id="@+id/btn_smsget"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/sms_view"
        android:layout_alignRight="@id/sms_view"
        android:layout_toRightOf="@id/et_smsphonenumber"
        android:background="@drawable/password_btn_getsms_release"
        android:text="获取验证码"
        android:textColor="@color/tab"
        android:inputType="number"/>
    <View
        android:id="@+id/sms_view2"
        android:layout_width="250dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_smsphonenumber"
        android:background="@color/page_background"/>
    <EditText
        android:id="@+id/et_smstest"
        android:paddingTop="20dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sms_view2"
        android:layout_alignLeft="@id/sms_view2"
        android:background="@null"
        android:hint="验证码"
        android:textColorHint="@color/text_button"
        />
    <Button
        android:id="@+id/btn_smsnext"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/sms_view2"
        android:layout_alignRight="@id/sms_view2"
        android:layout_toRightOf="@id/et_smstest"
        android:background="@drawable/password_btn_getsms_release"
        android:text="下一步"
        android:textColor="@color/tab"/>
</RelativeLayout>
